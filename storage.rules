
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Activity attachment files:
    // /activities/{activityId}/{fileName}
    match /activities/{activityId}/{fileName} {

      // Anyone can read
      allow read: if true;

      // Only authenticated users can write (upload/delete)
      allow write: if request.auth != null;
    }
  }
}
