
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions to keep rules DRY and readable
    function isSignedIn() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Super Administrator';
    }

    function isAdministrator() {
      let userRole = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
      return userRole == 'Administrator' || userRole == 'Super Administrator';
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isFromSameDistrict(resource) {
        let userDistrict = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.district;
        return resource.data.district == userDistrict;
    }

    match /users/{userId} {
      // READ:
      // - Any authenticated user can read any profile (needed for dropdowns, etc.)
      allow read: if isSignedIn();

      // CREATE:
      // - Only Super Admins and Admins can create new users.
      // - The creator cannot assign a role higher than or equal to their own.
      allow create: if isAdministrator()
                    && request.resource.data.role != 'Super Administrator'
                    && (isSuperAdmin() || request.resource.data.role != 'Administrator');

      // UPDATE:
      // - A user can update their own profile.
      // - A Super Admin can update any profile.
      // - An Admin can update any profile EXCEPT other Admins or Super Admins.
      // - No one can change their own role.
      allow update: if isSignedIn() &&
                    (isOwner(userId) || isSuperAdmin() || (isAdministrator() && resource.data.role != 'Administrator' && resource.data.role != 'Super Administrator')) &&
                    request.resource.data.role == resource.data.role;
                    
      // DELETE:
      // - Only Super Admins can delete users.
      // - You cannot delete yourself.
      allow delete: if isSuperAdmin() && request.auth.uid != userId;
    }

    match /activities/{activityId} {
        // READ:
        // - Super Admins can read everything.
        // - Admins can read activities from their district.
        // - Users can read their own activities.
        allow read: if isSignedIn() && (isSuperAdmin() || isOwner(resource.data.userId) || (isAdministrator() && isFromSameDistrict(resource)));

        // CREATE, UPDATE:
        // - Users can create/update their own activities.
        allow write: if isSignedIn() && isOwner(request.resource.data.userId);

        // DELETE:
        // - Users can delete their own activities.
        // - Admins can delete activities from their district.
        // - Super Admins can delete any activity.
        allow delete: if isSignedIn() && (isSuperAdmin() || isOwner(resource.data.userId) || (isAdministrator() && isFromSameDistrict(resource)));
    }
    
    match /attachments/{attachmentId} {
        // READ:
        // - Super Admins can read everything.
        // - Admins can read attachments from their district.
        // - Users can read their own attachments.
        allow read: if isSignedIn() && (isSuperAdmin() || isOwner(resource.data.userId) || (isAdministrator() && isFromSameDistrict(resource)));

        // CREATE, UPDATE:
        // - Users can create/update their own attachments.
        allow write: if isSignedIn() && isOwner(request.resource.data.userId);

        // DELETE:
        // - Users can delete their own attachments.
        // - Admins can delete attachments from their district.
        // - Super Admins can delete any attachment.
        allow delete: if isSignedIn() && (isSuperAdmin() || isOwner(resource.data.userId) || (isAdministrator() && isFromSameDistrict(resource)));
    }
  }
}
