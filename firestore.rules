rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------
    // ðŸ‘¤ USERS COLLECTION (public)
    // ----------------------------
    match /users/{userId} {
      allow read, list, create, update, delete: if true;
    }

    // ----------------------------
    // ðŸ“‹ ACTIVITIES COLLECTION (public)
    // ----------------------------
    match /activities/{activityId} {
      allow read, list, create, update, delete: if true;
    }
  }
}
